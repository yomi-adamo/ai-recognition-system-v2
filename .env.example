# Facial Vision Environment Configuration Example
# Copy this file to .env and update with your values

# Maverix Blockchain Configuration
FACIAL_VISION_MAVERIX_BASE_URL=http://localhost:3000
FACIAL_VISION_MAVERIX_TIMEOUT=30

# IPFS Configuration
FACIAL_VISION_IPFS_API_ENDPOINT=http://localhost:5001
FACIAL_VISION_IPFS_TIMEOUT=30

# FireFly Configuration
FACIAL_VISION_BLOCKCHAIN_FIREFLY_ENDPOINT=http://localhost:5000
FACIAL_VISION_BLOCKCHAIN_NAMESPACE=facial-vision

# Processing Configuration
FACIAL_VISION_VIDEO_PROCESSING_ENABLE_GPU=true
FACIAL_VISION_VIDEO_PROCESSING_BATCH_SIZE=32

# Clustering Configuration
FACIAL_VISION_CLUSTERING_ALGORITHM=hdbscan
FACIAL_VISION_CLUSTERING_MIN_CLUSTER_SIZE=2
FACIAL_VISION_CLUSTERING_SIMILARITY_THRESHOLD=0.6

# Logging Configuration
FACIAL_VISION_LOGGING_LEVEL=INFO
FACIAL_VISION_LOGGING_FORMAT=structured

# Path Configuration (optional overrides)
# FACIAL_VISION_PATHS_OUTPUT=/custom/output/path
# FACIAL_VISION_PATHS_TEMP=/custom/temp/path

# API Keys (if needed)
# FACIAL_VISION_API_KEY=your-api-key-here